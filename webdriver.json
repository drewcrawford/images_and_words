{
  "capabilities": {
    "alwaysMatch": {
      "browserName": "chrome",
      "goog:chromeOptions": {
        "args": [
          "--enable-unsafe-webgpu",
          "--enable-features=Vulkan",
          "--headless=new",
          "--gpu-launcher=/usr/bin/env VK_DRIVER_FILES=/usr/share/vulkan/icd.d/lvp_icd.x86_64.json"
        ]
      }
    }
  }
}