{
  "capabilities": {
    "alwaysMatch": {
      "browserName": "chrome",
      "goog:chromeOptions": {
        "args": [
          "--headless=new",
          "--enable-unsafe-webgpu",
          "--use-vulkan=swiftshader",
          "--use-vulkan",
          "--use-angle=vulkan",
          "--ignore-gpu-blocklist"
        ]
      }
    }
  }
}